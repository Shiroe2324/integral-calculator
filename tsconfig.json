{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@app": ["App.tsx"],
      "@i18n": ["locales/config.ts"],
      "@/~external-links": ["utils/externalLinks.ts"],
      "@/~integrals": ["utils/integrals.ts"],
      "@/~routes": ["utils/routes.ts"],
      "@/~assets/*": ["assets/*"],
      "@/~calc/*": ["components/calc/*", "contexts/calc/*", "hooks/calc/*", "views/calc/*", "providers/calc/*"],
      "@/~global/*": ["components/global/*", "contexts/global/*", "hooks/global/*", "providers/global/*"],
      "@/~home/*": ["components/home/*", "contexts/home/*", "hooks/home/*", "views/home/*", "providers/home/*"],
      "@/~others/*": ["components/others/*", "contexts/others/*", "hooks/others/*", "views/others/*", "providers/others/*"],
      "@/~en-ns/*": ["locales/en/calc/*", "locales/en/global/*", "locales/en/home/*", "locales/en/others/*"],
      "@/~es-ns/*": ["locales/es/calc/*", "locales/es/global/*", "locales/es/home/*", "locales/es/others/*"],
      "@/~locales/*": ["locales/*"],
      "@/~styles/*": ["styles/*"],
      "@/~types/*": ["types/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
